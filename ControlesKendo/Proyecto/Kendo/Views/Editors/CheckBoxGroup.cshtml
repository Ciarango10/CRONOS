    <div id="example">
        <div class="demo-section">
            <h4>Choose Hike Equipment</h4>
            <div>
                <input type="checkbox" id="selectAllCheckbox" class="k-checkbox k-checkbox-md k-rounded-md">
                <label class="k-checkbox-label" for="selectAllCheckbox">Select all available equipment</label>
            </div>
            <hr />
            <div class="k-form-field-wrap">
                <ul id="checkboxgroup"></ul>
            </div>
        </div>

        <script>
            $(document).ready(function () {
                
                var checkBoxGroup = $("#checkboxgroup").kendoCheckBoxGroup({
                    items: [
                        {
                            label: "Day pack",
                            value: "1"
                        },
                        {
                            label: "Hiking poles",
                            value: "2"
                        },
                        {
                            label: "Hiking boots",
                            value: "3"
                        },
                        {
                            label: "UV protection sunglasses",
                            value: "4"
                        },
                        {
                            enabled: false,
                            label: "Trousers",
                            value: "5"
                        }],
                    layout: "vertical",
                    value: ["1", "2"]
                }).data("kendoCheckBoxGroup");

                $("#selectAllCheckbox").change(function () {
                    if (this.checked) {
                        checkBoxGroup.checkAll(true)
                    } else {
                        checkBoxGroup.checkAll(false)
                    }
                });
            });


        </script>

        <style>
            hr {
                border: 1px solid darkgrey;
                margin-bottom: 40px;
            }
        </style>
    </div>

    <div id="example">
        <div class="configurator">
            <div class="header">Configurator</div>
            <div class="box-col">
                <h4>Layout Settings</h4>
                <ul class="options">
                    <li>
                        <label for="layout">Layout:</label>
                        <input id="layout2" name="layout" />
                    </li>
                    <li>
                        <label for="labelPosition">Label position:</label>
                        <input id="labelPosition2" name="labelPosition" />
                    </li>
                </ul>
            </div>
        </div>

        <div class="demo-section">
            <div>
                <label for="checkBoxGroup" class="label">Select language:</label>
                <ul id="checkBoxGroup2"></ul>
            </div>
        </div>

        <script>
            $(document).ready(function () {

                $("#layout2").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    value: "horizontal",
                    change: onChange,
                    dataSource: [
                        { text: "Horizontal", value: "horizontal" },
                        { text: "Vertical", value: "vertical" }
                    ]
                });

                $("#labelPosition2").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    value: "before",
                    change: onChange,
                    dataSource: [
                        { text: "Before", value: "before" },
                        { text: "After", value: "after" }
                    ]
                });

                var original = $("#checkBoxGroup2").clone(true);

                function onChange(e) {
                    e.preventDefault();
                    var checkBoxGroup = $("#checkBoxGroup2"),
                        clone = original.clone(true);

                    checkBoxGroup.data("kendoCheckBoxGroup");
                    checkBoxGroup.replaceWith(clone);
                    initCheckbox();
                }

                var initCheckbox = function () {
                    var layout = $("#layout2").data("kendoDropDownList").value();
                    var labelPosition = $("#labelPosition2").data("kendoDropDownList").value();

                    $("#checkBoxGroup2").kendoCheckBoxGroup({
                        items: ["English", "German", "Italian", "Russian", "Spanish"],
                        layout: layout,
                        labelPosition: labelPosition,
                        value: ["Italian", "Russian"]
                    }).data("kendoCheckBoxGroup");
                };

                initCheckbox();
            });
        </script>
