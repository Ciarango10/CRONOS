	         <div style="height:400px;padding-top:85px; text-align:center">
	               <div data-role="colorgradient" style="margin:auto;"
	                       data-input="false"
	                       data-opacity="true"
	                       data-formats="['rgb']"
	                       data-bind="enabled: isEnabled,
	                                  value: selectedColor,
	                                  events: { change: onChange }">
	               </div>
	         </div>        
	    </div>
	
	<script>
	    var viewModel = kendo.observable({
	        selectedColor: null,
	        isVisible: true,
	        isEnabled: true,
	        onChange: function() {
	            kendoConsole.log("event :: change (" + this.get("selectedColor") + ")");
	        }
	    });
	    kendo.bind($("#demo7"), viewModel);
	</script>
