    <div style="padding-top: 54px;">
        <label for="colorGradient" style="text-align: center; display: block">ColorGradient</label>
        <div id="colorGradient4" style="margin:auto;"></div>
    </div>
    <script>
        $("#colorGradient4").kendoColorGradient({
            opacity: true
        });

        $(document).on("keydown.examples", function (e) {
            if (e.altKey && e.keyCode === 87 /* w */) {
                $("#colorGradient4").data("kendoColorGradient").focus();
            }
        });
    </script>

    <div style="padding-top:54px;">
        <div id="colorgradient5" value="#00f" style="margin: auto;"></div>
    </div>
    <script>
        var colorGradient = $("#colorgradient5").kendoColorGradient().data("kendoColorGradient");

        colorGradient.bind({
            change: function(e) {
                kendoConsole.log("Change in picker #" + this.element.attr("id") + " :: " + e.value);
            }
        });
    </script>    

     <div class="kd-example-console">
        <div class="header">
            <span class="title">CONSOLE LOG</span>
            <span class="clear kd-text-secondary">Clear log</span>
        </div>
        <div class="console"></div>
     </div>
    
    <div class="configurator">
        <div class="header">Configurator</div>
        <div class="box-col">
            <h4>Values</h4>
            <ul class="options">
                <li>
                    <input id="value6" value="#ff0000" style="width: 100px; margin: 0;" />
                    <button id="set6">Set value</button>
                </li>
                <li><button id="get6">Get value</button></li>
            </ul>
        </div>
        <div class="box-col">
            <h4>State control</h4>
            <ul class="options">
                <li>
                    <button id="enable6">Enable</button>
                    <button id="focus6">Focus</button>
                </li>
            </ul>
        </div>
    </div>

    <div style="margin-top: 54px;">
        <div id="colorgradient6" value="#00f" style="margin: auto;"></div>
    </div>

    <script>
        var isEnabled = true;
        var colorgradient = $("#colorgradient6").kendoColorGradient({
            value: "#b72bba",
            input: true,
            opacity: true
        }).data("kendoColorGradient");

        $("#enable6").click(function () {
            colorgradient.enable(!isEnabled);
            isEnabled = !isEnabled;
        });
        $("#focus6").click(function () {
            colorgradient.focus();
        });
        $("#get6").click(function () {
            alert(colorgradient.value());
        });

        $("#set6").click(function () {
            var color = $("#value6").val();
            try {
                color = kendo.parseColor(color);
                colorgradient.value(color);
            } catch (ex) {
                alert('Cannot parse color: "' + color + '"');
            }
        });
    </script>

    <style>
        .configurator button {
            min-width: 80px;
        }
    </style>

