            <label for="no-inputs-picker">Choose Your Color | HEX </label>
            <div id="no-inputs-picker"></div>
        </div>
    </div>

    <script>
        $("#picker").kendoColorGradient({
            value: "#ff0000",
            format: "rgb",
            formats:["rgb","hex"]
        });
        $("#no-inputs-picker").kendoColorGradient({
            value:"#fff700",
            format:"hex",
