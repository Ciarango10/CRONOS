    <script>
        $(document).ready(function () {
            var signature = $("#signature3").kendoSignature({
                maximizable: true,
                hideLine: false,
                width: 600,
                popupScale: 1,
                height: 340
            }).getKendoSignature();

            $("#colorpicker3").kendoColorPicker({
                view: "gradient",
                views: ["gradient", "palette"],
                value: "#000000",
                change: function (e) {
                    signature.setOptions({
                        color: e.value
                    });
                },
                buttons: false
            });

            $("#background3").kendoColorPicker({
                view: "gradient",
                views: ["gradient", "palette"],
                value: "#FFFFFF",
                change: function (e) {
                    signature.setOptions({
                        backgroundColor: e.value
                    });
                },
                buttons: false
            });

            $("#brush-size3").kendoSlider({
                min: 1,
                max: 5,
                tooltip: {
                    enabled: false
                },
                change: function (e) {
                    let value = this.value();
                    signature.setOptions({
                        strokeWidth: value
                    });
                }
            });

            $("#size").kendoDropDownList({
                dataSource: ["small", "medium", "large", "none"],
                value: "medium",
                change: function () {
                    let value = this.value();
                    signature.setOptions({ size: value });
                }
            });

            $("#rounded").kendoDropDownList({
                dataSource: ["small", "medium", "large", "none"],
                value: "medium",
                change: function () {
                    let value = this.value();
                    signature.setOptions({ rounded: value });
                }
            });

            $("#fillMode").kendoDropDownList({
                dataSource: ["solid", "flat", "outline", "none"],
                value: "solid",
                change: function () {
                    let value = this.value();
                    signature.setOptions({ fillMode: value });
                }
            });
        });
    </script>

