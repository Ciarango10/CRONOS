    <div class="configurator">
        <div class="header">Configurator</div>

        <div class="box-col">
            <h4>Open the popup</h4>
            <ul class="options">
                <li>
                    <button id="open">Open</button>
                </li>
            </ul>
        </div>
        <div class="box-col">
            <h4>Toggle Readonly</h4>
            <ul class="options">
                <li>
                    <input id="readonly" />
                </li>
            </ul>
        </div>
        <div class="box-col">
            <h4>Toggle Enabled</h4>
            <ul class="options">
                <li>
                    <input id="enable" />
                </li>
            </ul>
        </div>
        <div class="box-col">
            <h4>Toggle Line Smoothing</h4>
            <ul class="options">
                <li>
                    <input id="smooth" />
                </li>
            </ul>
        </div>
        <div class="box-col">
            <h4>Toggle Dotted Line</h4>
            <ul class="options">
                <li>
                    <input id="hide-line" />
                </li>
            </ul>
        </div>
        <div class="box-col">
            <h4>Clear the value</h4>
            <ul class="options">
                <li>
                    <button id="clearValue">Clear value</button>
                </li>
            </ul>
        </div>
    </div>

    <div class="k-d-flex k-justify-content-center">
        <div id="signature6"></div>

        <script>
            $(document).ready(function () {
                let signature = $("#signature6").kendoSignature({ width: 600, height: 340, popupScale: 1 }).data("kendoSignature");

                $("#open").kendoButton({
                    click: function () {
                        signature.open();
                    }
                });

                $("#enable").kendoSwitch({
                    checked: true,
                    change: function () {
                        let value = this.value();
                        signature.enable(value);
                    }
                });

                $("#readonly").kendoSwitch({
                    checked: false,
                    change: function () {
                        let value = this.value();
                        signature.readonly(value);
                    }
                });

                $("#smooth").kendoSwitch({
                    checked: true,
                    change: function () {
                        let value = this.value();
                        signature.setOptions({
                            smooth: value
                        });
                    }
                });

                $("#hide-line").kendoSwitch({
                    checked: true,
                    change: function () {
                        let value = this.value();
                        signature.setOptions({
                            hideLine: !value
                        });
                    }
                });

                $("#clearValue").kendoButton({
                    click: function () {
                        signature.reset();
                    }
                });
            });
        </script>
    </div>

