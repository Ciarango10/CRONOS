    <div class="demo-section">
        <input type="checkbox" id="switch4" checked="checked" />
    </div>


    <style>

        .demo-section {
            text-align: center;
        }
    </style>

    <script>
        $(function () {
            var switchInstance = $("#switch4").kendoSwitch().data("kendoSwitch");

            $("#enableSwitch4").click(function () {
                switchInstance.enable(!!switchInstance.element.attr("disabled"));
            });

            $("#readonlySwitch4").click(function () {
                switchInstance.readonly(!switchInstance.element.attr("readonly"));
            });

            $("#toggleSwitch4").click(function () {
                switchInstance.toggle();
            });
        });
    </script>

    <div id="example">
        <div class="k-rtl demo-section">
