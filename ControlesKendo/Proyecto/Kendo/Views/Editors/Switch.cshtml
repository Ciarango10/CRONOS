    <script>
        $(function () {
            $("#notifications-switch").kendoSwitch();

            $("#mail-switch").kendoSwitch({
                messages: {
                    checked: "YES",
                    unchecked: "NO"
                }
            });

            $("#visible-switch").kendoSwitch({
                checked: true
            });

            $("#name-switch").kendoSwitch();
        });
    </script>

    <div id="example">
        <div class="configurator">
            <div class="header">Configurator</div>
            <div class="box-col">
                <ul class="options">
                    <li>
                        <h4>Size</h4>
                        <input id="size" name="size" />
                    </li>
                </ul>
            </div>
            <div class="box-col">
                <ul class="options">
                    <li>
                        <h4>Track</h4>
                        <input id="track" name="track" />
                    </li>
                </ul>
            </div>
            <div class="box-col">
                <ul class="options">
                    <li>
                        <h4>Thumb</h4>
                        <input id="thumb" name="thumb" />
                    </li>
                </ul>
            </div>
        </div>
        <div class="demo-section">
            <div>
                <input id="switch2" />
            </div>
        </div>
        <script>
            $(document).ready(function () {
                $("#switch2").kendoSwitch();
                var kSwitch = $("#switch2").data("kendoSwitch");
                var size = $("#size").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    value: "medium",
                    change: onChange,
                    dataSource: [
                        { text: "Small", value: "small" },
                        { text: "Medium", value: "medium" },
                        { text: "Large", value: "large" }
                    ]
                }).data("kendoDropDownList");

                var track = $("#track").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    change: onChange,
                    value: "full",
                    dataSource: [
                        { text: "Small", value: "small" },
                        { text: "Medium", value: "medium" },
                        { text: "Large", value: "large" },
                        { text: "Full", value: "full" },
                        { text: "None", value: "none" }
                    ]
                }).data("kendoDropDownList");

                var thumb = $("#thumb").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    change: onChange,
                    value: "full",
                    dataSource: [
                        { text: "Small", value: "small" },
                        { text: "Medium", value: "medium" },
                        { text: "Large", value: "large" },
                        { text: "Full", value: "full" },
                        { text: "None", value: "none" }
                    ]
                }).data("kendoDropDownList");

                function onChange(e) {
                    var sizeValue = size.value();
                    var roundedValue = track.value();
                    var thumbValue = thumb.value();
                    kSwitch.setOptions({
                        size: sizeValue,
                        trackRounded: roundedValue,
                        thumbRounded: thumbValue
                    })
                }
            });
        </script>

        <style>
            .k-picker.k-dropdownlist {
                width: 140px;
            }
        </style>
    </div>

