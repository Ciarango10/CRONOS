    <div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
		<div class="k-w-300">
			<input id="textbox4" />
		</div>
    </div> 

    <script>
        $(document).ready(function() {
            $("#textbox4").kendoTextBox({
                label: {
                    content: "Set name",
                    floating: true
                }
            });
        });
    </script>

    <style>
