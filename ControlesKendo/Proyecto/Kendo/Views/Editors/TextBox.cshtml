    </style>

    <div class="configurator">
        <div class="header">Configurator</div>
        <div class="box-col">
            <h4>Get / Set Value</h4>
            <ul class="options">
                <li>
                    <button id="get">Get value</button> or <button id="focus">Focus</button>
                </li>
                <li>
                    <input id="value" value="John Doe" />
                    <button id="set">Set value</button>
                </li>
            </ul>
        </div>
        <div class="box-col">
            <h4>Enable / Disable</h4>
            <ul class="options">
                <li>
                    <button id="enable">Enable</button>
                    <button id="disable">Disable</button>
                </li>
                <li>
                    <button id="readonly">Readonly</button>
                </li>
            </ul>
        </div>
    </div>

    <div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
        <div class="k-w-300">
            <input id="textbox5" />
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#textbox5").kendoTextBox({
                label: {
                    content: "Set name",
                    floating: true
                }
            });

            var textbox = $("#textbox5").data("kendoTextBox");

            var setValue = function () {
                textbox.value($("#value").data("kendoTextBox").value());
                textbox.floatingLabel.refresh();
            };

            $("#enable").click(function () {
                textbox.enable();
            });

            $("#disable").click(function () {
                textbox.enable(false);
            });

            $("#readonly").click(function () {
                textbox.readonly();
            });

            $("#focus").click(function () {
                textbox.focus();
            });

            $("#value").kendoTextBox({
                change: setValue
            });

            $("#set").click(setValue);

            $("#get").click(function () {
                alert(textbox.value());
            });
        });
    </script>

