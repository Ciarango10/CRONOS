            <div>
                <input id="timepicker2" title="timepicker" style="width: 100%;" />
            </div>
            <br>
            <br>
            <br>
            <label for="dropDownList">Alarm description</label>
            <input id="dropDownList2" />
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // create TimePicker from input HTML element
            $("#timepicker2").kendoTimePicker({
                value: new Date(),
                format: "h:mm:ss tt",
                componentType: "modern"
            });

            $("#dropDownList2").kendoDropDownList({
                dataSource: ["modern", "classic"],
                value: "modern",
                change: function (e) {
                    var picker = $("#timepicker2").data("kendoTimePicker");
                    var type = this.value();
                    var format = picker.options.format;
                    var value = picker.value();
                    var parent = $("#timepicker2").parent();

                    picker.destroy();
                    parent.empty();
                    parent.append('<input id="timepicker2" title="timepicker" style="width: 100%;" />');
                    $("#timepicker2").kendoTimePicker({
                        format: format,
                        value: value,
                        componentType: type
                    });
                }
            });
        });
    </script>

