    <div id="example">
        <div class="configurator">
            <div class="header">Configurator</div>
            <h4 style="display: flex; flex: 0 0 100%; padding: 16px 0 0 16px">API Functions</h4>
            <div class="box-col">
                <ul class="options">
                    <li>
                        <button id="playButton4">Play</button>
                    </li>
                    <li>
                        <button id="stopButton4">Stop</button>
                    </li>
                    <li>
                        <button id="pauseButton4">Pause</button>
                    </li>
                    <li>
                        <button id="fullScreenButton4">Full-screen</button>
                    </li>
                </ul>
            </div>
            <div class="box-col">
                <ul class="options">
                    <li>
                        <button id="toggleMuteButton4">Toggle mute</button>
                    </li>
                    <li>
                        <button id="isEndedButton4">Video has ended</button>
                    </li>
                    <li>
                        <button id="isPausedButton4">Video is paused</button>
                    </li>
                    <li>
                        <button id="isPlayingButton4">Video is playing</button>
                    </li>
                </ul>
            </div>
            <div class="box-col">
                <ul class="options">
                    <li>
                        <input id="volumeValue4" value="50" style="float:none; width:90px;" />
                        <button id="volumeButton4">Set volume</button>
                    </li>
                    <li>
                        <input id="seekValue4" value="50" style="float:none; width:90px;" />
                        <button id="seekButton4">Seek to</button>
                    </li>
                </ul>
            </div>
        </div>
        <div class="demo-section wide" style="max-width: 644px;">
            <div id="mediaplayer4" style="height:360px"></div>
        </div>
        <script type="text/javascript">
            $(document).ready(function () {

                $("#mediaplayer4").kendoMediaPlayer({
                    autoPlay: true,
                    navigatable: true,
                    media: {
                        title: "Build HIPAA-Compliant Healthcare Apps Fast",
                        source: "https://www.youtube.com/watch?v=dyvxivS5EcI"
                    }
                });

                var mediaPlayer = $("#mediaplayer4").data("kendoMediaPlayer");

                var setVolume = function () {
                    mediaPlayer.volume($("#volumeValue4").val());
                };

                var seekTo = function () {
                    mediaPlayer.seek($("#seekValue4").data("kendoNumericTextBox").value() * 1000);
                };

                $("#playButton4").click(function () {
                    mediaPlayer.play();
                });

                $("#stopButton4").click(function () {
                    mediaPlayer.stop();
                });

                $("#pauseButton4").click(function () {
                    mediaPlayer.pause();
                });

                $("#fullScreenButton4").click(function () {
                    mediaPlayer.fullScreen(true);
                });

                $("#toggleMuteButton4").click(function () {
                    mediaPlayer.mute(!mediaPlayer.mute());
                });

                $("#isEndedButton4").click(function () {
                    alert(mediaPlayer.isEnded());
                });

                $("#isPausedButton4").click(function () {
                    alert(mediaPlayer.isPaused());
                });

                $("#isPlayingButton4").click(function () {
                    alert(mediaPlayer.isPlaying());
                });

                $("#volumeValue4").kendoNumericTextBox({
                    change: setVolume,
                    min: 0,
                    max: 100,
                    format: "#",
                    decimals: 0
                });

                $("#seekValue4").kendoNumericTextBox({
                    change: seekTo,
                    min: 0,
                    max: 97,
                    format: "#",
                    decimals: 0
                });

                $("#seekButton4").click(seekTo);

                $("#volumeButton4").click(setVolume);
            });
        </script>
    </div>

