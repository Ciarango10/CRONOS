        <div id="example4">
            <div class="demo-section">
                <div class="box-col">
                    <h4>Single Selection</h4>
                    <ul id="align">
                        <li data-icon="align-left">
                        </li>
                        <li data-icon="align-center">
                        </li>
                        <li data-icon="align-right">
                        </li>
                    </ul>
                </div>
                <div class="box-col">
                    <h4>Multiple Selection</h4>
                    <ul id="inlineFormatting">
                        <li data-icon="bold">
                        </li>
                        <li data-icon="italic">
                        </li>
                        <li data-icon="underline">
                        </li>
                    </ul>
                </div>

            </div>
            <script>
                $(document).ready(function () {
                    $("#align").kendoButtonGroup({
                        selection: "single"
                    });
                    $("#inlineFormatting").kendoButtonGroup({
                        selection: "multiple"
