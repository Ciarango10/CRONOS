        </div>

            <div id="example">
                <div class="demo-section">
                    <ul id="select-period8">
                        <li>
                            Month
                        </li>
                        <li>
                            Quarter
                        </li>
                        <li>
                            Year
                        </li>
                    </ul>
                </div>

                <script>
                    $(document).ready(function(){
                        $("#select-period8").kendoButtonGroup({
                            index:0
                        });
                        $(document.body).keydown(function(e) {
                            if(e.altKey && e.keyCode ==87){
                                $("#select-period8")[0].focus();
                            }
                        });
                    });
                </script>

                <style>
                    .demo-section{
                        text-align: center;
                    }
                </style>
            </div>

            <div id="example8">
                <div class="demo-section">
                    <ul data-role="buttongroup"
                        data-index="1"
                        data-bind="visible: isVisible, events: { select: onSelect }">
                        <li data-icon="bold"></li>
                        <li data-icon="italic"></li>
                        <li data-icon="underline"></li>
                    </ul>
                </div>
            </div>
            <script>
                var viewModel = kendo.observable({
                    isEnabled: true,
                    isVisible: true,
                    onSelect: function (e) {
                        var buttonGroup = e.sender;
                        var index = buttonGroup.current().index();
                        kendoConsole.log("event :: select (" + index + ")", false);
                    }
                });
                kendo.bind($("#example8"), viewModel);
            </script>
            <style>
                .demo-section {
                    text-align: center;
                }
            </style>

            <div class="kd-example-console">
                <div class="header">
                    <span class="title">CONSOLE LOG</span>
                    <span class="clear kd-text-secondary">Clear log</span>
                </div>
                <div class="console"></div>
            </div>

    </body>
